<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/bck</item>
    </style>

    <!--WIDGET-->
    <style name="MatchMatch" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchMatchHor" parent="MatchMatch">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWrap" parent="MatchMatch">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrapHor" parent="MatchWrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapWrap" parent="MatchMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrapHor" parent="WrapWrap">
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
